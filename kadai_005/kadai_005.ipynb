      "source": [
        "# 台形の寸法\n",
        "upper = 10   # 上辺（cm）\n",
        "lower = 20   # 下辺（cm）\n",
        "height = 5   # 高さ（cm）\n",
        "\n",
        "# 台形の面積の計算結果を変数に代入\n",
        "area = (upper + lower) * height / 2\n",
        "\n",
        "# 数値と文字列を結合して出力\n",
        "print(str(area) + \"cm²\")\n"
      ]
    }
  ]
